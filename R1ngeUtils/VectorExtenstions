namespace R1ngeUtils
{
    public static class VectorExtenstions
    {
        public static Vector3 Add(this Vector3 original, Vector3 additional)
        {
            return original + additional;
        }

        public static Vector2 Add(this Vector2 original, Vector2 additional)
        {
            return original + additional;
        }

        public static Vector3 Subtract(this Vector3 original, Vector3 subtraction)
        {
            return original - subtraction;
        }

        public static Vector2 Subtract(this Vector2 original, Vector2 substraction)
        {
            return original - substraction;
        }

        public static Vector3 Multiply(this Vector3 original, Vector3 multiplier)
        {
            return new Vector3(original.x * multiplier.x, original.y * multiplier.y, original.z * multiplier.z);
        }

        public static Vector2 Multiply(this Vector2 original, Vector2 multiplier)
        {
            return new Vector2(original.x * multiplier.x, original.y * multiplier.y);
        }

        public static Vector3 Multiply(this Vector3 original, float multiplier)
        {
            return original * multiplier;
        }

        public static Vector2 Multiply(this Vector2 original, float multiplier)
        {
            return original * multiplier;
        }

        public static Vector3 Multiply(this Vector3 original, int multiplier)
        {
            return original * multiplier;
        }

        public static Vector2 Multiply(this Vector2 original, int multiplier)
        {
            return original * multiplier;
        }
    }
}
